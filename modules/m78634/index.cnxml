            </m:mrow>
            <m:annotation encoding="StarMath 5.0">{16} ^ {3} =4096 </m:annotation>
          </m:semantics>
        </m:math>
        <m:math xmlns:m="http://www.w3.org/1998/Math/MathML" display="block">
          <m:semantics>
            <m:mrow>
