              </m:msup>
              <m:mo stretchy="false">=</m:mo>
              <m:mn>16</m:mn>
            </m:mrow>
            <m:annotation encoding="StarMath 5.0">{16} ^ {1} =16 </m:annotation>
          </m:semantics>
        </m:math>
        <m:math xmlns:m="http://www.w3.org/1998/Math/MathML" display="block">
          <m:semantics>
            <m:mrow>
              <m:msup>
                <m:mn>16</m:mn>
