              </m:msup>
              <m:mo stretchy="false">=</m:mo>
              <m:mn>256</m:mn>
            </m:mrow>
            <m:annotation encoding="StarMath 5.0">{16} ^ {2} =256 </m:annotation>
          </m:semantics>
        </m:math>
        <m:math xmlns:m="http://www.w3.org/1998/Math/MathML" display="block">
